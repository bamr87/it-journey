{
  "name": "IT-Journey Jekyll Dev Environment",
  "dockerComposeFile": "docker-compose.yml",
  "service": "app",
  "workspaceFolder": "/workspace",
  
  "features": {
    "ghcr.io/devcontainers/features/node:1": {
      "version": "20"
    },
    "ghcr.io/devcontainers/features/git:1": {
      "version": "latest"
    },
    "ghcr.io/devcontainers/features/github-cli:1": {
      "version": "latest"
    }
  },

  "customizations": {
    "vscode": {
      "extensions": [
        "shopify.ruby-lsp",
        "ms-vscode.vscode-json",
        "redhat.vscode-yaml", 
        "davidanson.vscode-markdownlint",
        "yzhang.markdown-all-in-one",
        "eliostruyf.vscode-front-matter",
        "ms-azuretools.vscode-docker",
        "takumii.markdowntable",
        "gruntfuggly.todo-tree",
        "github.copilot",
        "github.copilot-chat"
      ],
      "settings": {
        "terminal.integrated.defaultProfile.linux": "bash",
        "editor.formatOnSave": true,
        "editor.codeActionsOnSave": {
          "source.fixAll": "explicit"
        },
        "files.associations": {
          "*.html": "liquid",
          "*.md": "markdown",
          "*.yml": "yaml",
          "*.yaml": "yaml",
          "_config*.yml": "yaml"
        },
        "emmet.includeLanguages": {
          "liquid": "html"
        },
        "liquid.format.enable": true,
        "markdown.preview.breaks": true,
        "markdown.extension.toc.levels": "2..6",
        "frontMatter.dashboard.openOnStart": true,
        "frontMatter.content.autoUpdateDate": true,
        "[markdown]": {
          "editor.fontSize": 14,
          "editor.lineHeight": 26,
          "editor.wordWrapColumn": 64,
          "editor.lineNumbers": "on",
          "editor.quickSuggestions": {
            "comments": "off",
            "strings": "off",
            "other": "off"
          },
          "editor.minimap.enabled": false,
          "editor.wordWrap": "off"
        },
        "files.watcherExclude": {
          "**/_site/**": true,
          "**/node_modules/**": true,
          "**/.sass-cache/**": true,
          "**/.jekyll-cache/**": true,
          "**/.bundle/**": true
        }
      }
    }
  },

  "forwardPorts": [4000, 4002, 35729],
  "portsAttributes": {
    "4000": {
      "label": "Jekyll Local Server",
      "onAutoForward": "notify"
    },
    "4002": {
      "label": "Jekyll Docker Server", 
      "onAutoForward": "notify"
    },
    "35729": {
      "label": "Jekyll LiveReload",
      "onAutoForward": "silent"
    }
  },

  "postCreateCommand": "bundle install",
  
  "remoteUser": "vscode"
}
