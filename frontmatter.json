    {
      "title": "posts",
      "previewPath": "/{{fm.type}}/{{year}}/{{month}}/{{day}}",
      "path": "[[workspace]]/pages/_posts",
      "contentTypes": [
        "default"
      ]
    },
    {
      "title": "quickstart",
      "path": "[[workspace]]/pages/_quickstart",
      "filePrefix": ""
    },
    {
      "title": "notes",
      "path": "[[workspace]]/pages/_notes",
      "filePrefix": ""
    },
    {
      "title": "about",
      "path": "[[workspace]]/pages/_about",
      "filePrefix": ""
    },
    {
      "title": "docs",
