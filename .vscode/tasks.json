{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Docker: Compose Up (Detached)",
      "type": "shell",
      "command": "docker-compose",
      "args": ["up", "-d"],
      "options": { "cwd": "${workspaceFolder}" },
      "problemMatcher": []
    },
    {
      "label": "Docker: Compose Stop",
      "type": "shell",
      "command": "docker-compose",
      "args": ["stop"],
      "options": { "cwd": "${workspaceFolder}" },
      "problemMatcher": []
    },
    {
      "label": "Docker: Compose Down",
      "type": "shell",
      "command": "docker-compose",
      "args": ["down"],
      "options": { "cwd": "${workspaceFolder}" },
      "problemMatcher": []
    },
    {
      "label": "Docker: Rebuild (Force)",
      "type": "shell",
      "command": "docker-compose",
      "args": ["up", "--build", "--force-recreate", "-d"],
      "options": { "cwd": "${workspaceFolder}" },
      "problemMatcher": []
    },
    {
      "label": "Docker: Logs (Follow)",
      "type": "shell",
      "command": "docker-compose",
      "args": ["logs", "-f", "jekyll"],
      "options": { "cwd": "${workspaceFolder}" },
      "problemMatcher": []
    }
  ]
}
